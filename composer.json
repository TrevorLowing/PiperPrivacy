{
    "name": "piper-privacy/piper-privacy",
    "description": "Complete privacy management system with collection lifecycle management, impact assessments, and workflow automation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.metabox.io/",
            "only": ["meta-box/*"]
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0",
        "meta-box/meta-box": "^5.7",
        "meta-box/mb-admin-columns": "^1.6",
        "meta-box/meta-box-aio": "^1.15",
        "meta-box/mb-frontend-submission": "^4.1",
        "meta-box/mb-custom-table": "^2.1",
        "meta-box/mb-relationships": "^2.0",
        "meta-box/mb-settings-page": "^3.0",
        "meta-box/mb-rest-api": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PiperPrivacy\\": "piper-privacy/includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
