  },
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "axe-core": "^4.8.3",
    "lighthouse": "^11.4.0",
    "pa11y": "^6.2.3",
    "pa11y-ci": "^3.0.1",
    "puppeteer": "^21.7.0"
  }
}
